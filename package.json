{
  "name": "mushroom-manager",
  "scripts": {
    "dev": "node dev-server.js",
    "dev:vercel": "vercel dev --listen 3000",
    "dev:static": "npx http-server public -p 3000 -c-1",
    "build": "echo 'No build step needed for Vercel'",
    "start": "node dev-server.js",
    "deploy": "vercel --prod",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "test:api": "curl http://localhost:3001/api/dashboard/stats",
    "test:app": "curl http://localhost:3001/",
    "test:protocols": "curl http://localhost:3001/api/protocols",
    "test:wiki": "curl http://localhost:3001/api/wiki"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.5",
    "hono": "^4.9.9"
  },
  "devDependencies": {
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "@types/node": "^20.19.19",
    "http-server": "^14.1.1",
    "vercel": "^48.2.0",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  }
}
