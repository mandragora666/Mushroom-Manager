{
  "name": "mushroom-manager",
  "scripts": {
    "dev": "@hono/node-server",
    "dev:sandbox": "wrangler pages dev dist --d1=mushroom-manager-db --local --ip 0.0.0.0 --port 3000",
    "build": "echo 'No build step needed for Vercel'",
    "start": "node src/index.tsx",
    "preview": "wrangler pages dev",
    "deploy": "npm run build && wrangler pages deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:migrate:local": "wrangler d1 migrations apply mushroom-manager-db --local",
    "db:seed": "wrangler d1 execute mushroom-manager-db --local --file=./seed.sql",
    "db:reset": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local && npm run db:seed",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.5",
    "hono": "^4.9.9"
  },
  "devDependencies": {
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "@types/node": "^20.19.19",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  }
}
